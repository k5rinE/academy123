import java.util.Scanner;

public class Test2 {

	public static void main(String[] args) {

		int sum = 0;
		int average = 0;
		int count = 0;
		for(int i=0; i<=100; i++) {
			sum+=i;
		}
			
		System.out.println("총합: "+sum);
		System.out.println("평균: "+(float)sum/100);
		
		sum=0;
		
		for(int i=0; i<=100; i++) {
			if(i%2==0 && i%7==0) {
				count++;
				sum+=i;
			}
		}
		
		System.out.println("중복배수의 개수: "+ count);
		System.out.println("중복배수의 총합: "+ sum);
		
		
	}
}